<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linetwo"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:onClick="APositive"
            android:id="@+id/ap"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:textColor="@color/text"
            android:text="A +"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:onClick="ANegative"
            android:id="@+id/an"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/button"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="A -"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/text"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linetwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newblood"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:onClick="ABPositive"
            android:id="@+id/abp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textColor="@color/text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="AB +"
            android:layout_marginEnd="30dp"/>


        <Button
            android:onClick="ABNegative"
            android:id="@+id/abn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textColor="@color/text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="AB -"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>


    <Button
        android:onClick="BeDonor"
        android:id="@+id/newblood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button"
        android:gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Be a Donor"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/linethree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newblood"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:onClick="BPositive"
            android:id="@+id/bp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textColor="@color/text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="B +"
            android:layout_marginEnd="30dp"/>


        <Button
            android:onClick="BNegative"
            android:id="@+id/bn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textColor="@color/text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="B -"
            android:layout_marginStart="30dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linethree"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:onClick="OPositive"
            android:id="@+id/op"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textColor="@color/text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="O +"
            android:layout_marginEnd="30dp"/>


        <Button
            android:onClick="ONegative"
            android:id="@+id/on"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:textSize="30sp"
            android:textColor="@color/text"
            android:text="O -"
            android:layout_marginStart="30dp"/>
    </LinearLayout>


</RelativeLayout>